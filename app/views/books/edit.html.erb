<h1>Editing Book</h1>

<%= form_with(model: @book, class: "edit_book", local: true) do |f| %>
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "book_title", id: "book_title" %>
  </div>

  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body, class: "book_body", id: "book_body" %>
  </div>

  <div class="actions">
    <%= f.submit "Update Book", data: { disable_with: "Update Book" } %>
  </div>
<% end %>

